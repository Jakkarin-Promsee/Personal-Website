<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <!-- Bootstrap CSS -->
  <script src="/js/bootstrap.bundle.min.js"></script>
  <!-- Bootstrap JS -->
  <link href="/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom styles for this template -->
  <link href="/login-register.css" rel="stylesheet">
  <link href="/home/navbar.css" rel="stylesheet">
</head>

<body>
  <%- include('assets/navbar') %>
  <%- include('assets/top-moral') %>

  <section class="vh-100">
    <div class="container py-1">
      <div class="row d-flex align-items-center justify-content-center h-100">
        <!-- image -->
        <div class="col-md-8 col-lg-7 col-xl-6">
          <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg" class="img-fluid" alt="Phone image">
        </div>

        <!-- Form -->
        <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1 ">
          <!-- buffer hiegh -->
          <div class="mb-4"></div>

          <!-- Pills navs -->
          <ul class="nav nav-pills nav-justified mb-3 border border-secondary rounded" id="ex1" role="tablist">
            <li class="nav-item" role="presentation">
              <a class="nav-link <%=(locals.isLoggedIn)? ((isLoggedIn==0) ? "active" : "" ) : "active"%>" id=" tab-login" data-bs-toggle="pill" href="#pills-login" role="tab" aria-controls="pills-login" aria-selected="true">Login</a>
            </li>
            <li class="nav-item" role="presentation">
              <a class="nav-link <%=(locals.isLoggedIn)? ((!isLoggedIn==0) ? "active" : "" ) : ""%>" id="tab-register" data-bs-toggle="pill" href="#pills-register" role="tab" aria-controls="pills-register" aria-selected="false">Register</a>
            </li>
          </ul>
          <!-- End Pills navs -->

          <div class="tab-content">
            <!-- Login Form -->
            <div class="tab-pane show <%=(locals.isLoggedIn)? ((isLoggedIn==0) ? "active" : "fade" ) : "active"%>" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
              <form id="signinForm" action="/auth/login" method="POST">
                <% if (locals.message_login) { %>
                <div class="alert alert-danger mb-4" role="alert"><%= message_login %></div>
                <% } %>

                <!-- Username input -->
                <div data-mdb-input-init class="form-outline mb-4">
                  <input type="text" name="username" value="<%= locals.old_data_login ? old_data_login.username : "" %>" required class="form-control form-control-lg" />
                  <label class="form-label" for="form1Example13">Username</label>
                </div>

                <!-- Password input -->
                <div data-mdb-input-init class="form-outline mb-4">
                  <input type="password" name="password" value="<%= locals.old_data_login ? old_data_login.password : "" %>" required class="form-control form-control-lg" />
                  <label class="form-label" for="form1Example23">Password</label>
                </div>

                <div class="d-flex justify-content-between mb-4">
                  <!-- Checkbox -->
                  <div class="form-check">
                    <input class="form-check-input" name="KeepLogin" type="checkbox" value="on" id="form1Example3" checked />
                    <label class="form-check-label" for="form1Example3"> Stay log in </label>
                  </div>
                  <a href="/forget-password">Forgot password?</a>
                </div>

                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-lg w-100">Sign in</button>
              </form>

              <div class="divider d-flex align-items-center my-4">
                <span class="dividers"></span>
                <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
                <span class="dividers"></span>
              </div>

              <button class="btn btn-lg w-100 btn-primary" style="background-color: #dd4b39; border-color: #dd4b39;" type="submit"><i class="fab fa-google me-2"></i> Sign in with google</button>

              <div class="mt-4">
                <p class="text-center mb-0">Don't have an account? <a href="/login?register=true" class="text-white fw-bold">Sign Up</a>
                </p>
              </div>
            </div>
            <!-- End Login Form -->

            <!-- Register Form -->
            <div class="tab-pane <%=(locals.isLoggedIn)? ((!isLoggedIn==0) ? "active" : "fade" ) : "fade"%>" id="pills-register" role="tabpanel" aria-labelledby="tab-register">
              <form id="registerForm" action="/auth/register" method="POST">
                <div class="mb-4"></div>
                <% if (locals.message_register) { %>
                <div class="alert alert-danger mb-4" role="alert"><%= message_register %></div>
                <% } %>

                <!-- Username input -->
                <div data-mdb-input-init class="form-outline mb-4">
                  <input type="text" name="username" value="<%= locals.old_data_register ? old_data_register.username : "" %>" required class="form-control form-control-lg" />
                  <label class="form-label" for="form1Example13">Username</label>
                </div>

                <!-- Email input -->
                <div data-mdb-input-init class="form-outline mb-4">
                  <input type="email" name="email" value="<%= locals.old_data_register ? old_data_register.email : "" %>" required class="form-control form-control-lg" />
                  <label class="form-label" for="form1Example13">Email</label>
                </div>

                <!-- Password input -->
                <div data-mdb-input-init class="form-outline mb-4">
                  <input type="password" name="password" value="<%= locals.old_data_register ? old_data_register.password : "" %>" required class="form-control form-control-lg" />
                  <label class="form-label" for="form1Example23">Password</label>
                </div>

                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-lg w-100">Register</button>
              </form>

              <div class="divider d-flex align-items-center my-4">
                <span class="dividers"></span>
                <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
                <span class="dividers"></span>
              </div>

              <button class="btn btn-lg w-100 btn-primary" style="background-color: #dd4b39; border-color: #dd4b39;" type="submit"><i class="fab fa-google me-2"></i> Register with google</button>
            </div>
            <!-- End Register Form -->
          </div>





        </div>


      </div>
    </div>
    </div>
  </section>


</body>

</html>